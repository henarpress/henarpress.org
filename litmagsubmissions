<script type="text/javascript">
    function configureAhoy() {
        ahoy.configure({
            visitsUrl: "https://usebasin.com/ahoy/visits",
            eventsUrl: "https://usebasin.com/ahoy/events",
            page: "817d60bd36c5"
        });
        ahoy.trackView();
        ahoy.trackSubmits();
    }
    
    if (typeof ahoy !== 'undefined') {
        configureAhoy();
    }

    // Menu functionality
    const menuBtn = document.getElementById('menu-btn');
    const menuOverlay = document.getElementById('menu-overlay');

    menuBtn.addEventListener('click', () => {
        menuOverlay.classList.toggle('open');
        menuBtn.classList.toggle('menu-open');
    });

    // File input display
    const fileInput = document.getElementById('file');
    const fileWrapper = fileInput.closest('.file-input-wrapper');
    const fileNameDisplay = document.getElementById('file-name');

    fileInput.addEventListener('change', (e) => {
        if (e.target.files.length > 0) {
            const fileName = e.target.files[0].name;
            fileNameDisplay.textContent = fileName;
            fileWrapper.classList.add('has-file');
        } else {
            fileNameDisplay.textContent = 'DOC, DOCX, PDF, TXT, RTF, JPG, PNG (Max 10MB)';
            fileWrapper.classList.remove('has-file');
        }
    });

    // Form submission handling
    const form = document.getElementById('contact-form');
    const successMessage = document.getElementById('success-message');

    form.addEventListener('submit', (e) => {
        // Let the form submit naturally to UseBasin
        // Show success message after a brief delay
        setTimeout(() => {
            successMessage.classList.add('show');
            form.reset();
            fileWrapper.classList.remove('has-file');
            fileNameDisplay.textContent = 'DOC, DOCX, PDF, TXT, RTF, JPG, PNG (Max 10MB)';
            
            // Scroll to success message
            successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 500);
    });
</script>
